<div class="page-header">
  <%= link_to new_game_step_device_path(game_id: @game.id, step_id: @step.id), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Device
  <% end %>
  <h1>Listing devices</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Sensor</th>
            <th>Device</th>
            <th>Valid</th>
            <th>Step</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @devices.each do |device| %>
        <tr>
          <td><%= device.sensor_id %></td>
          <td><%= device.device_id %></td>
          <td><%= device.is_ok %></td>
          <td><%= device.step %></td>
          <td><%= link_to 'Show', game_step_device_path(game_id: @game.id, step_id: @step.id, id: device.id) %></td>
          <td><%= link_to 'Edit', edit_game_step_device_path(game_id: @game.id, step_id: @step.id, id: device.id) %></td>
          <td><%= link_to 'Destroy', game_step_device_path(game_id: @game.id, step_id: @step.id, id: device.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
