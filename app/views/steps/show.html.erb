<div class="page-header">
  <%= link_to game_steps_path(game_id: @game.id), class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_game_step_path(@step), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show step</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @step.name %></dd>

  <dt>Finished:</dt>
  <dd><%= @step.finished %></dd>

  <dt>Game:</dt>
  <dd><%= @step.game %></dd>

</dl>
