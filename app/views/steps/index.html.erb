<div class="page-header">
  <%= link_to new_game_step_path(game_id: @game.id), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Créer une énigme
  <% end %>
  <h1>Les énigmes de <%= @game %></h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
          <th>Nom de l'énigme</th>
          <th>Terminé</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @steps.each do |step| %>
      <tr>
          <td><%= step.name %></td>
          <td><%= step.finished ? "Oui" : "Non" %></td>
          <td><%= link_to 'Gérer les Sensits', game_step_devices_path(@game, step) %></td>
        <td><%= link_to 'Modifier', edit_game_step_path(@game, step) %></td>
        <td><%= link_to 'Supprimer', game_step_path(@game, step), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to games_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Retour
<% end %>
