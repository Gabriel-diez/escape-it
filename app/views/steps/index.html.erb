<div class="page-header">
  <%= link_to new_game_step_path(game_id: @game.id), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Step
  <% end %>
  <h1>Listing steps of <%= @game.name %></h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Name</th>
            <th>Finished</th>
            <th></th>
          <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @steps.each do |step| %>
      <tr>
            <td><%= step.name %></td>
            <td><%= step.finished %></td>
            <td><%= link_to 'Show', game_step_path(@game, step) %></td>
            <td><%= link_to 'GÃ©rer les devices', game_step_devices_path(@game, step) %></td>
        <td><%= link_to 'Edit', edit_game_step_path(@game, step) %></td>
        <td><%= link_to 'Destroy', game_step_path(@game, step), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <tr>
      <% end %>
    </tbody>
  </table>
</div>
