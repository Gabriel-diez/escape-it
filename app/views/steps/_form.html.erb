<%= form_for([@game, @step], html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @step.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@step.errors.count, "error") %> prohibited this step from being saved:</h4>

      <ul>
      <% @step.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "Nom de l'énigme", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10 text-right">
      <button type="submit" class="btn btn-primary"><%= @step.persisted? ? "Modifer " : "Créer " %> l'énigme</button>
    </div>
  </div>
<% end %>
