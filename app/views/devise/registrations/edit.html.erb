<h2>Modifier mon compte</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <% unless current_user.client_id.nil? %>
  <a 
    href="http://www.sensit.io/oauth/authorize?client_id=<%= current_user.client_id %>&response_type=code&redirect_uri=<%= callback_url %>"
    target="_blank"
    class="btn btn-primary"
  >
   Se connecter à l'API de sensit
  </a>
  <hr>
  <% end %>

  <div class="col-sm-10 margin">
    <div class="form-group">
      <%= f.label :email, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="col-sm-10 margin">
    <div class="form-group">
      <%= f.label "Champ client_id sur l'interface Sens'it", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :client_id, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="col-sm-10 margin">
    <div class="form-group">
      <%= f.label "Champ client_secret sur l'interface Sens'it", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :client_secret, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="col-sm-10 margin">
    <div class="form-group">
      <%= f.label "Mot de passe", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="col-sm-10 margin">
    <div class="form-group">
      <%= f.label "Confirmation de mot de passe", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
    </div>
    <br/>
  </div>

  <div class="col-sm-10 margin">
    <div class="form-group">
      <%= f.label "Mot de passe actuel", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.password_field :current_password, class: "form-control" %>
      </div>
    </div>
    <br/>
  </div>

  <div class="col-sm-10 margin">
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-primary">Mettre à jour</button>
      </div>
    </div>
  </div>
<% end %>
